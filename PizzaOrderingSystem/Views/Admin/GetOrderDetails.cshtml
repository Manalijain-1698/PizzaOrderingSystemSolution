@model IEnumerable<PizzaOrderingSystem.Models.OrderDetail>

@{
    Layout = null;
}

<!DOCTYPE html>

<link  href="~/Content/GetOrderDetailsStyle.css" rel="stylesheet"/>
<body>
    <h2 id="heading">Order Details</h2>   
    <table id="orderdata">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerDetail.C_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.PizzaDetail.PizzaName)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerDetail.C_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.PizzaDetail.PizzaName)
        </td>
        <td>
            @Html.ActionLink("Send Confirmation Message", "SendSMS", new { id = item.OrderId })

        </td>
    </tr>
    }
    
    </table>

    <div>
        @Html.ActionLink("Back to Menu", "AdminNavigate")
    </div>
    
</body>

