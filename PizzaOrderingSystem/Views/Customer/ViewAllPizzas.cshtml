@model IEnumerable<PizzaOrderingSystem.Models.PizzaDetail>





<link href="~/Content/ViewAllPizzasStyle.css" rel="stylesheet" />
<h2 id="heading">Pizza Menu</h2>

@using (Html.BeginForm("ViewAllPizzas", "Customer", FormMethod.Get))
{
    <label>Search by Name</label>
    @Html.TextBox("searchingpizza")
    <input type="submit" value="submit" />

}
<br />

<table id="pizzamenu">
    <tr>
        <th>
            Pizza Id
        </th>
        <th>
            Pizza Name
        </th>
        <th>
            Pizza Descprition
        </th>
        <th>
            Pizza Price
        </th>
        <th>
            Pizza Quantity
        </th>
        <th>
            Total Price
        </th>
        <th></th>
        <th></th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.PizzaId)</td>

            <td>@Html.DisplayFor(modelItem => item.PizzaName)</td>

            <td>@Html.DisplayFor(modelItem => item.Pizzadescription)</td>

            <td>@Html.DisplayFor(modelItem => item.PizzaPrice)</td>
            <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
            <td>@Html.DisplayFor(modelItem => item.TotalPrice)</td>

            <td id="navlink">
                @Html.ActionLink("Edit Quantity", "Edit", new { Id = item.PizzaId })
                @*@Html.ActionLink("Order Now", "OrderNow", new { id = item.PizzaId })*@

            </td>
            <td id="orderbutton">
                @Html.ActionLink("Order Now", "OrderNow", new { id = item.PizzaId })
            </td>
        </tr>
    }
</table>
<div>
    @Html.ActionLink("Back to Menu", "CustomerNavigate")
</div>




