@model PizzaOrderingSystem.Models.LoginDetail

@{
    Html.RenderPartial("_CommonHeading");
    <br />
}

<link href="~/Content/LoginStyle.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="registerBox">
        <h2 id="heading">Login</h2>
        <div class="form-horizontal">


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.L_Username, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.L_Username, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.L_Username, "", new { @style = "color:red;font-size:12px; " })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.L_Password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.L_Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.L_Password, "", new { @style = "color:red;font-size:12px; " })
                </div>
            </div>
            <br />
            
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Login" class="btn btn-default" id="submitButton" />
                </div>
            </div>
            <br />
           
        </div>
        <div id="navlink">
            @Html.ActionLink("Dont Have an Account ? Register", "Register", "RegisterCustomer")
        </div>
        <br />
        
        <div id="errorMessage">
            @ViewBag.Message
        </div>


    </div>
}
